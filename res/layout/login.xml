<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_top_bg" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/main_title"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/login_user_edit"
        android:layout_width="fill_parent"
        android:layout_height="49.0dip"
        android:layout_marginLeft="25.0dip"
        android:layout_marginRight="25.0dip"
        android:layout_marginTop="50dip"
        android:background="@drawable/login_selector"
        android:hint="@string/login_user_hint"
        android:singleLine="true"
        android:text="@string/user_name_hint"
        android:textSize="16.0sp" />

    <EditText
        android:id="@+id/login_passwd_edit"
        android:layout_width="fill_parent"
        android:layout_height="49dip"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="25.0dip"
        android:layout_marginRight="25.0dip"
        android:background="@drawable/login_selector"
        android:hint="@string/login_passwd_hint"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="16.0sp" />

    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_marginLeft="25.0dip"
        android:layout_marginRight="25.0dip"
        android:background="@drawable/main_login_selector"
        android:text="@string/main_login"
        android:textColor="#ffffff"
        android:textSize="20.0sp" />

</LinearLayout>